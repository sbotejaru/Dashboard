  $rect <470,510,670,550>
  method float ConvertSpeedToAngle( arg int32 Speed )
  {
    /* The template just returns the given argument... */
    if (MetricInKph == true)
    {
      if ( Speed == 0 )
        return 120;

      return Speed/2 + 120;
    }
    else
    {
      if ( Speed == 0 )
        return 120;

      return Speed * 2 / 3.3 + 120; 
    }
  }

